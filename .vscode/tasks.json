{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "windows": {
                "command": "java",
                "args": [
                    "-jar", "${env:PROG8C}",
                    "neofetch.p8",
                    "-target", "cx16"
                ]
            },
            "linux":{
                "command": "p8compile",
                "args": [
                    "neofetch.p8",
                    "-target", "cx16"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}